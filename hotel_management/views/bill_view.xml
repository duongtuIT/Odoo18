<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_booking_order_form" model="ir.ui.view">
            <field name="name">booking.order.form</field>
            <field name="model">booking.order</field>
            <field name="arch" type="xml">
                <form string="Booking Order">
                    <sheet>
                        <group>
                            <group>
                                <field name="booking_code" invisible="1"/>
                                <field name="customer_name"/>
                                <field name="booking_date" />
                                <field name="check_in_date"/>
                                <field name="check_out_date"/>
                                <field name="rental_days"/>
                                <field name="room_price"/>
                                <field name="total_amount"/>
                            </group>
                            <group>
                                <field name="hotel_id"/>
                                <field name="room_type"/>
                                <field name="room_id"
                                       domain="[('hotel_id', '=', hotel_id), ('bed_type', '=', room_type)]"
                                       options="{'no_open': True}"/>
                                <field name="room_name"/>
                                <field name="state" />
                                <field name="payment_status" readonly="1"/>
                                <field name="payment_date" readonly="1"/>
                                <field name="payment_amount" readonly="1"/>

                                <button name="action_open_payment_wizard"
                                        string="Thanh toÃ¡n"
                                        type="object"
                                        invisible="payment_status != 'unpaid'"/>
                                <button name="action_create_invoice"
                                        string="Create Invoice" type="object" class="btn-primary"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_booking_order_list" model="ir.ui.view">
            <field name="name">booking.order.list</field>
            <field name="model">booking.order</field>
            <field name="arch" type="xml">
                <list>
                    <!-- <field name="booking_code"/> -->
                    <field name="customer_name"/>
                    <field name="hotel_id"/>
                    <!-- <field name="room_id"/> -->
                    <field name="room_name"/>
                    <field name="check_in_date"/>
                    <field name="check_out_date"/>
                    <field name="state"/>
                    <field name="payment_status" readonly="1"/>
                    <field name="payment_date" readonly="1"/>
                    <field name="payment_amount" readonly="1"/>
                </list>
            </field>
        </record>
        <record id="view_booking_order_search" model="ir.ui.view">
            <field name="name">booking.order.search</field>
            <field name="model">booking.order</field>
            <field name="arch" type="xml">
                <search>
                    <field name="customer_name"/>
                    <field name="hotel_id"/>
                    <!-- <field name="room_id"/> -->
                    <field name="room_name"/>
                    <field name="check_in_date"/>
                    <field name="check_out_date"/>
                    <field name="state"/>
                </search>
            </field>
        </record>
        <record id="action_booking_order" model="ir.actions.act_window">
            <field name="name">Booking Orders</field>
            <field name="res_model">booking.order</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_room_booking_management" name="Room Booking" parent="menu_hotel_management" sequence="40"/>
        <menuitem id="menu_booking_all" name="ALL Booking" parent="menu_room_booking_management" action="action_booking_order"/>
    </data>
</odoo>
